@model PRN222.Kahoot.Service.BusinessModels.ParticipantModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center">Join Kahoot Session</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="">
                        <div class="form-group mb-3">
                            <label for="codeRoom" class="form-label">Code Room</label>
                            <input type="text" class="form-control" name="codeRoom" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Join Session</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>