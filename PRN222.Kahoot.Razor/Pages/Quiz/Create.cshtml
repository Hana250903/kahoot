@page
@model PRN222.Kahoot.Razor.Pages.Quiz.CreateModel

@{
    ViewData["Title"] = "Create";
}

<body style="background-image: url('https://firebasestorage.googleapis.com/v0/b/imageuploadv3.appspot.com/o/TestFile%2F2024_1_29_638421436218758181_background-xam.jpg?alt=media&token=55ff73e8-c4cd-4066-bcd3-14343f7705d8'); padding: 20px; border-radius: 10px;">
    <div class="text-center">
        <h1 class="mb-4" style="color: blanchedalmond;">Create New Quiz</h1>

        <h4 class="mb-4 text-white">Fill in the details below to create a new quiz</h4>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="bg-light p-4 rounded shadow-sm">
                    <form method="post" style="display: flex; flex-direction: column; gap: 1rem;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Quiz.Title" class="control-label"></label>
                            <input asp-for="Quiz.Title" class="form-control mx-auto" style="max-width: 400px;" />
                            <span asp-validation-for="Quiz.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Quiz.Description" class="control-label"></label>
                            <input asp-for="Quiz.Description" class="form-control mx-auto" style="max-width: 400px;" />
                            <span asp-validation-for="Quiz.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Quiz.Visibility" class="control-label"></label>
                            <input asp-for="Quiz.Visibility" class="form-control mx-auto" style="max-width: 400px;" />
                            <span asp-validation-for="Quiz.Visibility" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Quiz.CreateBy" class="control-label"></label>
                            <select asp-for="Quiz.CreateBy" class="form-control mx-auto" style="max-width: 400px;" asp-items="ViewBag.CreateBy"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Quiz.CreateAt" class="control-label"></label>
                            <input asp-for="Quiz.CreateAt" class="form-control mx-auto" style="max-width: 400px;" />
                            <span asp-validation-for="Quiz.CreateAt" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-success btn-lg px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-page="Index" class="btn btn-secondary btn-lg px-4">Back to List</a>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
