@page
@model PRN222.Kahoot.Razor.Pages.Quiz.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<body style="background-image: url('https://firebasestorage.googleapis.com/v0/b/imageuploadv3.appspot.com/o/TestFile%2F2024_1_29_638421436218758181_background-xam.jpg?alt=media&token=55ff73e8-c4cd-4066-bcd3-14343f7705d8'); padding: 20px; border-radius: 10px;">
    <div class="text-center">
        <h1 class="mb-4" style="color: blanchedalmond;">Delete Quiz</h1>

        <h4 class="mb-4 text-white">Are you sure you want to delete this quiz?</h4>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="bg-light p-4 rounded shadow-sm">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quiz.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quiz.Title)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quiz.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quiz.Description)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quiz.Visibility)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quiz.Visibility)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quiz.CreateAt)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quiz.CreateAt)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <form method="post">
                <input type="hidden" asp-for="Quiz.QuizId" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg px-4" />
            </form>
            <br />
            <a asp-page="./Index" class="btn btn-secondary btn-lg px-4">Back to List</a>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
