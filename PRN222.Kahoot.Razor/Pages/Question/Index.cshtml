@model PRN222.Kahoot.Razor.Pages.Question.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].QuestionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Question1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Question2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Question3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Question4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Answer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].QuizId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Question) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuizId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.QuestionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.QuestionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.QuestionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
