@page
@model PRN222.Kahoot.Razor.Pages.Room.CreateModel

@{
    ViewData["Title"] = "Create Room";
}

<h2>Create Room</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label>Select Quiz:</label>
        <select asp-for="QuizSession.QuizId" class="form-control" asp-items="ViewBag.QuizId"></select>
    </div>

    <div class="form-group">
        <label>ID Host:</label>
        <input asp-for="QuizSession.HostId" class="form-control" value="7" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Tạo Room</button>
</form>

<div>
    <a asp-page="Details">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
